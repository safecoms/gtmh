<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sot_purchase_order_type_form_view" model="ir.ui.view">
        <field name="name">purchase.order.type.form.view</field>
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="sequence_id" />
                            <field name="payment_term_id" />
                            <field name="first_approval_person"/>
                            <field name="second_approval_person"/>
                            <field name="third_approval_person"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sot_purchase_order_type_tree_view" model="ir.ui.view">
        <field name="name">purchase.order.type.tree.view</field>
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <tree string="Type">
                <field name="name"/>
                <field name="sequence_id"/>
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="sot_purchase_order_type_search_view" model="ir.ui.view">
        <field name="name">purchase.order.type.search.view</field>
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <search string="Type">
                <field name="name"/>
                <field name="sequence_id"/>
                <field name="payment_term_id" />
                <group expand="0" string="Group By">
                    <filter name="entry_sequence" string="Entry Sequence" domain="[]"
                            context="{'group_by':'sequence_id'}" />
                    <filter name="payment_term" string="Payment Term" domain="[]"
                            context="{'group_by':'payment_term_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="sot_purchase_order_type_action" model="ir.actions.act_window">
        <field name="name">Purchase Order Types</field>
        <field name="res_model">purchase.order.type</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="sot_purchase_order_type_tree_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to set a new type for purchase order.</p>
        </field>
    </record>

    <record id="sot_purchase_order_type_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sot_purchase_order_type_form_view"/>
        <field name="act_window_id" ref="sot_purchase_order_type_action"/>
    </record>

    <record id="sot_purchase_order_type_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sot_purchase_order_type_tree_view"/>
        <field name="act_window_id" ref="sot_purchase_order_type_action"/>
    </record>

    <menuitem id="sot_purchase_order_type_menu" parent="purchase.menu_purchase_config"
              action="sot_purchase_order_type_action" sequence="20"/>

</odoo>
